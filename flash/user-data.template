#cloud-config
ssh_pwauth: false

users:
  - default
  - name: rpic
    gecos: rpic
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    ssh_import_id: None
    lock_passwd: true
    shell: /bin/bash
    ssh_authorized_keys:
      - {{SSH_KEY}}

chpasswd:
  expire: false

hostname: rpic-{{NODE_NUM}}
